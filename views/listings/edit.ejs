<% layout('/layouts/boilerplate.ejs') -%>
<body>
  <h3>Edit this listing</h3>
  <div class="row mt-3">
    <div class="col-8">
      <form
        method="POST"
        class="needs-validation"
        action="/listings/<%=editlisting._id%>?_method=PUT"
        enctype="multipart/form-data"
        novalidate
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            value="<%= editlisting.title %>"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title Looks good!</div>
        </div>
        <div class="md-3">
          <label for="description">Description</label>
          <textarea
            type="text"
            name="listing[description]"
            class="form-control"
            required
          >
            <%=editlisting.description %></textarea
          >
          <div class="invalid-feedback">Enter a short description</div>
        </div>
        <div class="row">
          <div class="md-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              class="form-control"
              type="number"
              name="listing[price]"
              value="<%= editlisting.price %>"
              required
            />
            <div class="invalid-feedback">Enter a valid price</div>
          </div>

          <div class="md-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              name="listing[location]"
              value="<%= editlisting.location %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter a valid location name</div>
          </div>
        </div>
        <div class="md-3">
          Original listing image <br>
          <img src="<%= updatedImageUrl %>" alt="">
        </div>
        <div class="md-3">
          <label for="image" class="form-label">Upload an Image </label>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
          />
        </div>
        <div class="md-3">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            value="<%= editlisting.country %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a valid Country name</div>
        </div>
        <button class="btn btn-dark mt-3 edit-btn">Upadate</button>
      </form>
    </div>
  </div>
</body>
