<% layout('/layouts/boilerplate.ejs') -%>
<body>
  <h3>Edit this listing</h3>
  <div class="row mt-3">
    <div class="col-8">
      <form method="POST" action="/listings/<%=editlisting._id%>?_method=PUT">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            value="<%= editlisting.title %>"
            class="form-control"
          />
        </div>
        <div class="md-3">
          <label for="description">Description</label>
          <textarea
            type="text"
            name="listing[description]"
            class="form-control"
          >
            <%=editlisting.description %></textarea
          >
        </div>
        <div class="row">
          <div class="md-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              class="form-control"
              type="text"
              name="listing[price]"
              value="<%= editlisting.price %>"
            />
          </div>

          <div class="md-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              name="listing[location]"
              value="<%= editlisting.location %>"
              class="form-control"
            />
          </div>
        </div>
        <div class="md-3">
          <label for="image" class="form-label">Image link</label>
          <input
            type="text"
            name="listing[image]"
            value="<%= editlisting.image.url %>"
            class="form-control"
          />
        </div>
        <div class="md-3">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            value="<%= editlisting.country %>"
            class="form-control"
          />
        </div>
        <button class="btn btn-dark mt-3 edit-btn">Upadate</button>
      </form>
    </div>
  </div>
</body>
