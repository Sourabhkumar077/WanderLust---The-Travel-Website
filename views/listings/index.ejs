<% layout('/layouts/boilerplate.ejs') -%>
<style>
  .filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    margin: 2rem 0;
    justify-content: flex-start;
  }
  
  .filter {
    text-align: center;
    opacity: 0.8;
    transition: all 0.2s ease;
    cursor: pointer;
    min-width: 60px;
    padding: 0.5rem;
    border-radius: 0.5rem;
  }
  
  .filter:hover {
    opacity: 1;
    background-color: rgba(108, 117, 125, 0.1);
    transform: translateY(-2px) scale(1.07);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .filter .icon {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: #6c757d;
  }
  
  .filter p {
    margin: 0;
    font-size: 0.9rem;
    font-weight: 500;
  }
  
  .price-container {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  
  .tax-message {
    display: none;
    color: #dc3545;
    font-size: 0.85rem;
    font-weight: 500;
    background-color: rgba(220, 53, 69, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }
  
  .tax-toggle {
    border: 2px solid #6c757d;
    border-radius: 0.75rem;
    padding: 0.75rem 1rem;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    margin-left: auto;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(108, 117, 125, 0.1);
  }
  
  .tax-toggle:hover {
    box-shadow: 0 4px 12px rgba(108, 117, 125, 0.2);
    transform: translateY(-1px);
  }
  
  .tax-toggle .form-check-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: #495057;
  }
  
  .tax-toggle .form-check-input:checked {
    background-color: #6c757d;
    border-color: #6c757d;
  }

  /* Mobile Responsive Styles */
  @media (max-width: 768px) {
    .filters {
      gap: 0.5rem;
      margin: 1rem 0;
      justify-content: center;
    }
    
    .filter {
      min-width: 50px;
      padding: 0.5rem 0.25rem;
    }
    
    .filter .icon {
      font-size: 1rem;
      margin-bottom: 0.25rem;
    }
    
    .filter p {
      font-size: 0.75rem;
    }
    
    .tax-toggle {
      margin-left: 0;
      margin-top: 1rem;
      width: 100%;
      justify-content: center;
      display: flex;
      border-width: 1px;
    }
    
    .tax-toggle .form-check-reverse {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
    }
    
    .tax-toggle .form-check-label {
      font-size: 0.85rem;
      margin-right: 0.5rem;
    }
    
    .price-container {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
    
    .tax-message {
      font-size: 0.8rem;
      padding: 0.2rem 0.4rem;
    }
  }

  @media (max-width: 480px) {
    .filters {
      gap: 0.25rem;
    }
    
    .filter {
      min-width: 45px;
      padding: 0.25rem 0.1rem;
    }
    
    .filter .icon {
      font-size: 0.9rem;
    }
    
    .filter p {
      font-size: 0.7rem;
    }
    
    .tax-toggle {
      padding: 0.5rem;
    }
    
    .tax-toggle .form-check-label {
      font-size: 0.8rem;
    }
    
    .tax-message {
      font-size: 0.75rem;
      padding: 0.15rem 0.3rem;
    }
  }

  /* Fade-in-up animation for cards */
  .fade-in-up {
    opacity: 0;
    transform: translateY(40px);
    transition: opacity 0.7s cubic-bezier(0.4, 0, 0.2, 1), transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .fade-in-up.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>
<body>
  <div class="filters">
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic city</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-chess-rook"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beaches</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pools</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-ship"></i></div>
      <p>Ports</p>
    </div>
    
    <!-- tax switch -->
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
        <label class="form-check-label" for="switchCheckDefault">
          Display Total with Tax
        </label>
      </div>
    </div>
  </div>

  <h2 class="listings-heading mb-4 mt-4" id="all-listings">All Listings</h2>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings){ %>
    <a href="/listings/<%=listing._id%>" class="listing-link">
      <div class="card listing-card fade-in-up">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20em"
        />
        <div class="card-img-overlay"></div>

        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title %></b>
            <br />
            <div class="price-container">
              <span>&#8377; <%= listing.price?.toLocaleString("en-IN") || 'Price Not Available' %> / night</span>
              <span class="tax-message">+18% GST</span>
            </div>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <!-- How It Works / Features Section (moved below listings) -->
  <section id="how-it-works" class="features-section mb-5 mt-5">
    <h2 class="features-title">How It Works</h2>
    <div class="features-grid">
      <div class="feature-card">
        <i class="fa-solid fa-search-location feature-icon"></i>
        <h5>Discover Stays</h5>
        <p>Browse and search for unique homes, cabins, and experiences around the world.</p>
      </div>
      <div class="feature-card">
        <i class="fa-solid fa-house-user feature-icon"></i>
        <h5>Host Your Place</h5>
        <p>List your property and earn by sharing your space with travelers.</p>
      </div>
      <div class="feature-card">
        <i class="fa-solid fa-star feature-icon"></i>
        <h5>Leave Reviews</h5>
        <p>Share your experiences and help others choose the perfect stay.</p>
      </div>
      <div class="feature-card">
        <i class="fa-solid fa-shield-alt feature-icon"></i>
        <h5>Safe & Secure</h5>
        <p>Enjoy secure bookings, verified hosts, and 24/7 support for peace of mind.</p>
      </div>
    </div>
  </section>

  <!-- Contact/FAQ Section (moved to bottom) -->
  <section class="contact-faq-section mb-5 mt-5">
    <div class="row g-4">
      <div class="col-md-6">
        <div class="contact-card p-4 h-100">
          <h3>Contact Us</h3>
          <form id="contactForm" autocomplete="off">
            <div class="mb-3">
              <label for="contactName" class="form-label">Name</label>
              <input type="text" class="form-control" id="contactName" required />
            </div>
            <div class="mb-3">
              <label for="contactEmail" class="form-label">Email</label>
              <input type="email" class="form-control" id="contactEmail" required />
            </div>
            <div class="mb-3">
              <label for="contactMsg" class="form-label">Message</label>
              <textarea class="form-control" id="contactMsg" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-success w-100">Send Message</button>
            <div id="contactSuccess" class="alert alert-success mt-3 d-none" role="alert">
              Thank you for reaching out! We'll get back to you soon.
            </div>
          </form>
        </div>
      </div>
      <div class="col-md-6">
        <div class="faq-card p-4 h-100">
          <h3>Frequently Asked Questions</h3>
          <div class="accordion" id="faqAccordion">
            <div class="accordion-item">
              <h2 class="accordion-header" id="faq1">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqCollapse1">
                  How do I book a stay?
                </button>
              </h2>
              <div id="faqCollapse1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                <div class="accordion-body">Simply browse listings, select your dates, and click 'Book Now' on the listing page.</div>
              </div>
            </div>
            <div class="accordion-item">
              <h2 class="accordion-header" id="faq2">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqCollapse2">
                  How do I become a host?
                </button>
              </h2>
              <div id="faqCollapse2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                <div class="accordion-body">Click 'Airbnb your home' in the navbar, fill out your property details, and publish your listing.</div>
              </div>
            </div>
            <div class="accordion-item">
              <h2 class="accordion-header" id="faq3">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqCollapse3">
                  Is my payment secure?
                </button>
              </h2>
              <div id="faqCollapse3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                <div class="accordion-body">Yes, all payments are processed securely and your information is protected.</div>
              </div>
            </div>
            <div class="accordion-item">
              <h2 class="accordion-header" id="faq4">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqCollapse4">
                  Can I leave a review after my stay?
                </button>
              </h2>
              <div id="faqCollapse4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                <div class="accordion-body">Absolutely! After your stay, visit the listing page and leave your feedback.</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Tax toggle functionality
    document.addEventListener('DOMContentLoaded', function() {
      const taxToggle = document.getElementById('switchCheckDefault');
      const taxMessages = document.querySelectorAll('.tax-message');

      function updateTaxMessages() {
        if (taxToggle.checked) {
          taxMessages.forEach(message => {
            message.style.display = 'inline';
          });
        } else {
          taxMessages.forEach(message => {
            message.style.display = 'none';
          });
        }
      }

      updateTaxMessages();
      taxToggle.addEventListener('change', updateTaxMessages);

      // Fade-in-up animation for cards
      const cards = document.querySelectorAll('.fade-in-up');
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1 });
      cards.forEach(card => observer.observe(card));
    });
  </script>
</body>
