<style>
    .search-btn{
        background-color: #fe424d;
        color: white;
        border-radius: 25px;
        padding: 0 2rem;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(254,66,77,0.08);
        transition: background 0.2s, color 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 2.5rem;
        gap: 0.6rem;
    }
    .search-btn:hover{
        background-color: #e63946;
        color: white;
    }
    .search-btn i{
        display: flex;
        align-items: center;
        margin-right: 0;
        font-size: 1rem;
    }
    .search-group {
        position: relative;
        width: 100%;
    }
    .search-inp {
        border-radius: 25px;
        padding: 1.1rem 1.5rem 0.6rem 1.5rem;
        min-width: 200px;
        border: 2px solid #e9ecef;
        margin-right: 0.5rem;
        height: 2.5rem;
        background: none;
        font-size: 1rem;
        transition: border-color 0.3s;
    }
    .search-label {
        position: absolute;
        left: 1.5rem;
        top: 50%;
        transform: translateY(-50%);
        color: #adb5bd;
        font-size: 1rem;
        pointer-events: none;
        transition: all 0.2s cubic-bezier(0.4,0,0.2,1);
        background: white;
        padding: 0 0.2rem;
    }
    .search-inp:focus + .search-label,
    .search-inp:not(:placeholder-shown) + .search-label {
        top: 0.3rem;
        left: 1.2rem;
        font-size: 0.85rem;
        color: #764ba2;
        background: white;
    }
    .navbar-search-form {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-left: 1.5rem;
    }
    @media (max-width: 768px) {
        .navbar-search-form {
            flex-direction: column;
            align-items: stretch;
            gap: 0.5rem;
            margin-left: 0;
            width: 100%;
        }
        .search-inp {
            min-width: 0;
            width: 100%;
            margin-right: 0;
        }
        .search-btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- letf nav-options -->
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" href="/listings">Explore</a>
            </div>
            <!-- search pannel -->
            <div class="navbar-nav ms-auto">
                <form class="navbar-search-form" role="search" autocomplete="off">
                    <div class="search-group" style="flex:1;">
                        <input class="form-control search-inp" type="search" id="navbarSearchInput" placeholder=" " required />
                        <label for="navbarSearchInput" class="search-label">Search Destinations</label>
                    </div>
                    <button class="btn search-btn" type="submit" id="navbarSearchBtn"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
                </form>
            </div>
            <!-- right navbar options -->
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/listings/new">Airbnb your home</a>
                <% if(!currentUser){ %>
                    <a class="nav-link " href="/signup"><b>Signup</b></a>
                    <a class="nav-link" href="/login"><b>Login</b></a>
                    <% } %>
                        <% if(currentUser){ %>
                            <a class="nav-link " href="/logout"><b>logout</b></a>
                            <% } %>
            </div>
        </div>
    </div>
</nav>